<odoo>
    <data>
        <record id="view_mrp_routing_workcenter_form_inherit_assigned" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.form.inherit.assigned</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='workcenter_id']" position="after">
                    <div style="display:flex;align-items:center;">
                        <div class="o_form_label" style="font-weight:bold; color:black; margin-right:10px; white-space:nowrap;">Assigned To</div>
                        <field name="assigned_user_id" style="width:200px;"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>